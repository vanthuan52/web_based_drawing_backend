{
  "name": "web-based-drawing-backend",
  "version": "1.0.0",
  "description": "web-based-drawing",
  "main": "app.ts",
  "scripts": {
    "test": "jest",
    "build:ejs": "ejs-cli src/**/*.ejs --outDir dist",
    "build": "tsc -p tsconfig.json",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/app.ts --env development",
    "prod": "cross-env NODE_ENV=production ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/app.ts --env production",
    "staging": "cross-env NODE_ENV=staging ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/app.ts --env staging",
    "start": "NODE_ENV=development tsc && node -r tsconfig-paths/register --respawn --transpile-only src/app.ts --env development",
    "start:dev": "NODE_ENV=development pm2 start ecosystem.config.js --env development",
    "start:staging": "NODE_ENV=staging pm2 start ecosystem.config.js --env staging",
    "start:prod": "NODE_ENV=production pm2 start ecosystem.config.js --env production",
    "pm2:prod": "NODE_ENV=production node build/src/app.js --env production",
    "pm2:staging": "NODE_ENV=staging node build/src/app.js --env staging",
    "pm2:dev": "NODE_ENV=production node -T -P tsconfig.json build/src/app.js --env production",
    "pm2:test": "NODE_ENV=production pm2 start build/server.js --watch -i max"
  },
  "keywords": [
    "api",
    "backend",
    "server",
    "web-based-drawing"
  ],
  "author": "charlesdang.252@gmail.com",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "connect-redis": "^8.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "dxf": "^5.2.0",
    "dxf-parser": "^1.1.2",
    "dxf2json": "^1.0.3",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "filereader": "^0.10.3",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "three-dxf": "^1.3.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dxf": "^4.6.9",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/redis": "^4.0.10",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^5.20.1",
    "typescript": "^5.7.2"
  }
}
